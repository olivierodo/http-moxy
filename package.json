{
  "name": "@restqa/http-moxy",
  "version": "1.0.0",
  "description": "A light mock server, meant to mock external dependencies to support the Quality Assurance Automation Testing",
  "main": "index.js",
  "scripts": {
    "build": "anyproxy-ca -g",
    "start": "node index.js",
    "start:dev": "nodemon index.js",
    "lint:fix": "standard --fix",
    "lint": "standard",
    "test": "jest",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "mock",
    "server",
    "qa"
  ],
  "author": "olivier rodomond",
  "license": "ISC",
  "dependencies": {
    "anyproxy": "^4.1.2",
    "express": "^4.17.1",
    "memory-cache": "^0.2.0"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "standard": "^14.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/restqa/http-moxy.git"
  },
  "bugs": {
    "url": "https://github.com/restqa/http-moxy/issues"
  },
  "homepage": "https://github.com/restqa/http-moxy#readme",
  "jest": {
    "globals": {
      "$": true
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 0
      }
    }
  },
  "standard": {
    "globals": [
      "$"
    ],
    "env": [
      "jest"
    ]
  }
}
